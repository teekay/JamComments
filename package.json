{
  "name": "jam-comments",
  "version": "1.0.0",
  "description": "A commenting platform for self-hosted static websites.",
  "main": "index.js",
  "engines": {
    "node": ">=12.20.0"
  },
  "scripts": {
    "generate": "json2ts -i schemas/**/* -o generated/ && ts-auto-guard --paths ./generated/*.ts --export-all",
    "api": "ts-node src/api.ts",
    "web": "ts-node src/web.ts",
    "cli": "ts-node src/cli.ts",
    "sql": "pgtyped -c config.json",
    "test": "jest",
    "prebuild": "yarn generate",
    "build": "tsc -p tsconfig.json",
    "postbuild": "copyfiles ./src/**/*.hbs public/* build",
    "clean": "rm -rf build && rm -rf generated",
    "ts-node": "ts-node",
    "prettier-format": "prettier --config .prettierrc src/**/*.ts tests/**/*.ts --write",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "lint-fix": "eslint \"./src/**/*.ts\" \"./tests/**/*.ts\" --fix",
    "start": "node ./build/src/web.js",
    "watch": "tsc -p tsconfig.json -w"
  },
  "repository": "git+https://github.com/teekay/JamComments.git",
  "keywords": [],
  "author": "teekay <tomas.kohl@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/teekay/JamComments/issues"
  },
  "homepage": "https://github.com/teekay/JamComments#readme",
  "dependencies": {
    "@azure/functions": "^3.0.0",
    "@azure/service-bus": "^7.5.1",
    "@nestjs/common": "7.6.15",
    "@nestjs/core": "7.6.15",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "7.6.15",
    "@ngneat/falso": "^2.23.0",
    "@pgtyped/cli": "^0.13.0",
    "@pgtyped/query": "^0.13.0",
    "akismet-api": "^5.1.0",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "commander": "^7.2.0",
    "connect-flash": "^0.1.1",
    "connect-pg-simple": "^6.2.1",
    "cookie-parser": "^1.4.5",
    "csurf": "^1.11.0",
    "dotenv": "^10.0.0",
    "express-handlebars": "^5.3.2",
    "express-session": "^1.17.2",
    "handlebars-dateformat": "^1.1.1",
    "handlebars-helpers": "^0.10.0",
    "hbs": "^4.1.2",
    "he": "^1.2.0",
    "jest": "^27.0.4",
    "jsdom": "^16.6.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.33",
    "nestjs-console": "^5.0.1",
    "nestjs-pino": "^1.4.0",
    "nodemailer": "^6.6.1",
    "nodemailer-mailgun-transport": "^2.1.3",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "pg": "^8.6.0",
    "pg-boss": "^6.0.1",
    "pino": "^6.11.3",
    "pino-colada": "^2.1.0",
    "pino-pretty": "^5.0.1",
    "postgres-migrations": "^5.1.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.6.7",
    "showdown": "^1.9.1",
